# Environment Variables Template
# Copy this file to .env and fill in your actual values

# API Keys
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
YAHOO_FINANCE_API_KEY=your_yahoo_key_here

# Data Configuration
DATA_SOURCE=yahoo  # Options: yahoo, alpha_vantage, local
DATA_CACHE_DIR=data/cache

# Trading Configuration
PAPER_TRADING=true
BROKER_API_KEY=your_broker_key_here
BROKER_SECRET=your_broker_secret_here

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=true
LOG_DIR=results/logs

# Model Configuration
MODEL_CHECKPOINT_DIR=results/models
MODEL_VERSION=v1.0.0

# Experiment Tracking
USE_MLFLOW=false
MLFLOW_TRACKING_URI=http://localhost:5000
USE_WANDB=false
WANDB_PROJECT=polyhedgerl
WANDB_API_KEY=your_wandb_key_here

# Performance
NUM_WORKERS=4
USE_GPU=false
GPU_ID=0

# Database (Optional)
DATABASE_URL=postgresql://user:password@localhost:5432/polyhedgerl

# Email Notifications (Optional)
ENABLE_EMAIL_ALERTS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Risk Management
MAX_POSITION_SIZE=0.1
MAX_LEVERAGE=1.0
STOP_LOSS_PERCENTAGE=0.05

# Backtesting
BACKTEST_START_DATE=2020-01-01
BACKTEST_END_DATE=2023-12-31
INITIAL_CAPITAL=100000
